<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/photo"
    android:id="@+id/drawerID"
    tools:context=".MainActivity">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"

        >





        <Button
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Relevant Magazine"
            android:fontFamily="@font/calibri"
            android:background="@drawable/brt_shape"
            android:backgroundTint="#FF9800"
            android:id="@+id/b1ID"
            />


        <Button
            android:layout_width="160dp"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:text="Ad Age"
           android:fontFamily="@font/calibri"
            android:background="@drawable/brt_shape"
            android:backgroundTint="#4CAF50"
            android:id="@+id/b2ID"
            />



        <Button
            android:layout_width="160dp"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:text="Vanity Fair"
            android:fontFamily="@font/calibri"
            android:background="@drawable/brt_shape"
            android:backgroundTint="#F3F4F3"
            android:id="@+id/b3ID"
            />


        <Button
            android:layout_width="160dp"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:text="Frieze Magazine"
            android:background="@drawable/brt_shape"
            android:backgroundTint=" #34495e "
            android:fontFamily="@font/calibri"
            android:textColor="@color/white"
            android:id="@+id/b4ID"
            />
        <Button
            android:layout_width="160dp"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:text="New Yorker"
            android:background="@drawable/brt_shape"
            android:fontFamily="@font/calibri"
            android:backgroundTint=" #e74c3c "
            android:textColor="@color/white"
            android:id="@+id/b5ID"
            />


        <Button
            android:layout_width="160dp"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:text="wired"
            android:background="@drawable/brt_shape"
            android:fontFamily="@font/calibri"
            android:backgroundTint="#3498db "
            android:textColor="@color/white"
            android:id="@+id/b6ID"
            />
    </LinearLayout>



    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:itemTextColor="@color/darkgray"
        app:itemIconTint="@color/darkgray"
        app:menu="@menu/drawermenu"
        android:layout_gravity="start"
        android:id="@+id/navID"
        app:headerLayout="@layout/header"


        >




    </com.google.android.material.navigation.NavigationView>




</androidx.drawerlayout.widget.DrawerLayout>